{
    "i18n": true,
    "type": "tabs",
    "items": {
        "_general": {
            "type": "panel",
            "label": "heading_GeneralSettings",
            "icon": "settings",
            "items": {
                "_logo": {
                    "type": "staticImage",
                    "src": "daikin_logo.jpg",
                    "style": {
                        "width": "150px",
                        "height": "auto",
                        "marginBottom": "20px"
                    }
                },
                "daikinIp": {
                    "type": "text",
                    "label": "field_daikinIp",
                    "help": "info_daikinIp",
                    "placeholder": "192.168.1.100",
                    "required": true,
                    "pattern": "^(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
                },
                "pollingInterval": {
                    "type": "number",
                    "label": "field_pollingInterval",
                    "help": "info_pollingInterval",
                    "min": 10,
                    "max": 3600,
                    "default": 300,
                    "suffix": "s"
                },
                "useGetToPost": {
                    "type": "checkbox",
                    "label": "field_useGetToPost",
                    "help": "info_useGetToPost",
                    "default": false
                }
            }
        }
    }
}